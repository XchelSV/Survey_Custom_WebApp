doctype html
html(ng-app='DS_Survey')
  head
    title= 'Digital Soft Survey'
    link(rel='stylesheet', href='/materialize/css/materialize.css')
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/animate.css')
    link(href="https://fonts.googleapis.com/css?family=Quicksand:300,400,700" rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/jquery-1.11.1.min.js')
    script(src='/javascripts/angular.min.js')
    script(src='/javascripts/angular_app.js')
    script(src='/materialize/js/materialize.js')
    script(src='/cropit/dist/jquery.cropit.js')
    script(src='/javascripts/qrcode.min.js')
    script(src='//momentjs.com/downloads/moment-with-locales.min.js')
    script(src='/javascripts/chart.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-route.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular-cookies.js')

    style.
            body {
                display: flex;
                min-height: 100vh;
                flex-direction: column;
                font-family: 'Quicksand', sans-serif;
              }
            
            .regular{
              font-weight:400 !important;
            }

            .bold{
              font-weight:700 !important;
            }


            main {
                flex: 1 0 auto;
              }

            input:not([type]):focus:not([readonly]), input[type=text]:focus:not([readonly]), input[type=password]:focus:not([readonly]), input[type=email]:focus:not([readonly]), input[type=url]:focus:not([readonly]), input[type=time]:focus:not([readonly]), input[type=date]:focus:not([readonly]), input[type=datetime]:focus:not([readonly]), input[type=datetime-local]:focus:not([readonly]), input[type=tel]:focus:not([readonly]), input[type=number]:focus:not([readonly]), input[type=search]:focus:not([readonly]), textarea.materialize-textarea:focus:not([readonly]){
              border-bottom: 1px solid #546e7a !important;
              box-shadow: 0 1px 0 0 #546e7a !important;
            }




  body
    block content

    block footer

        


        footer.page-footer(class='#{color}')
          .container
            .row
              .col.l6.s12
                h5.white-text #{nombre}
                p.grey-text.text-lighten-4 #{direccion}
              .col.l4.offset-l2.s12
                h5.white-text Contacto
                ul
                  li
                    a.grey-text.text-lighten-3(href='#!') #{correo}
                  
          .footer-copyright(class='#{color} z-depth-3')
            .container
              | © #{nombre}
              a.grey-text.text-lighten-4.right(href='http://digitalsoft.mx/') Powered by DigitalSoft ©